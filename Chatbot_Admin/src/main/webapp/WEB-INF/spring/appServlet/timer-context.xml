<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/mvc"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc 
	http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd
		http://www.springframework.org/schema/beans 
		http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
		http://www.springframework.org/schema/context 
		http://www.springframework.org/schema/context/spring-context-4.1.xsd
		http://www.springframework.org/schema/aop 
		http://www.springframework.org/schema/aop/spring-aop-4.1.xsd
		">
	<annotation-driven />
	<context:component-scan base-package="com.psib.timer.task" />

	<context:property-placeholder location="classpath:data-config.properties" />

	<!-- Handles HTTP GET requests for /resources/** by efficiently serving 
		up static resources in the ${webappRoot}/resources directory -->
	<resources mapping="/resources/**" location="/resources/" />

	<beans:bean name="TimerJob"
		class="org.springframework.scheduling.quartz.JobDetailFactoryBean">
		<beans:property name="jobClass" value="com.psib.timer.job.TimerJob" />
		<beans:property name="jobDataMap">
			<beans:map>
				<beans:entry key="timerTask" value-ref="timerTask" />
			</beans:map>
		</beans:property>
		<beans:property name="durability" value="true" />
	</beans:bean>

	<beans:bean id="cronTimerJobTrigger"
		class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
		<beans:property name="jobDetail" ref="TimerJob" />
		<beans:property name="cronExpression" value="${timer.cron.expression}" />
	</beans:bean>

	<!-- Scheduler factory bean to glue together jobDetails and triggers to 
		Configure Quartz Scheduler -->
	<beans:bean
		class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
		<beans:property name="jobDetails">
			<beans:list>
				<beans:ref bean="TimerJob" />
			</beans:list>
		</beans:property>

		<beans:property name="triggers">
			<beans:list>
				<beans:ref bean="cronTimerJobTrigger" />
			</beans:list>
		</beans:property>
	</beans:bean>
</beans:beans>
